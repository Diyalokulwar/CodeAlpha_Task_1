#include<iostream>
using namespace std;
int main()
{ 
    int a,b,x,y,z,w;
    float p=0,q=0,c=0,d=0;
    
    //For 1st semester
    cout<<"For Semester1:- "<<endl;
    cout<<"Enter the no. of courses taken:- ";
    cin>>a;
     cout<<endl;
    for(int i=1;i<=a;i++)
    {
        cout<<"Course "<<i<< ":-"<<endl;
        cout<<"credits: ";
        cin>>x;
        p+=x;
      cout<<"grade points: ";
      cin>>y;
        q+=y;
    }

     cout<<"Total credits:- "<<p<<endl;
     cout<<"Total grade points:- "<<q<<endl;
     
    float  s=0;
  
     s = (float)(2.5*(q/p));
    cout<<endl;
    cout<<"SGPA for the Semester1:- "<<s;
    cout<<endl;
    
    cout<<"---------------------------------------"<<endl;
    //For 2nd semester
    cout<<"For Semester2:- "<<endl;
    cout<<"Enter the no. of courses taken:- ";
    cin>>b;
     cout<<endl;
    for(int i=1;i<=b;i++)
    {
        cout<<"Course "<<i<< ":-"<<endl;
        cout<<"credits: ";
        cin>>w;
         c=c+w;
        cout<<"grade points: ";
        cin>>z;
         d=d+z;
    }
    
     cout<<"Total credits:- "<<w<<endl;
     cout<<"Total grade points:- "<<z<<endl;
     
    float r=0;
    r=(float)(2.5*(z/w));
    cout<<endl;
    cout<<"SGPA for the Semester2:- "<<r;

    cout<<endl;
    
    //Overall cgpa for the year
    float g=0;
    g=(s+r)/2;
    cout<<endl;
    cout<<"---------------------------------------"<<endl;
    cout<<"Overall CGPA:- "<<g<<endl;
 cout<<"---------------------------------------"<<endl;
    
    return 0;
}
